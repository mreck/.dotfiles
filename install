#!/bin/sh

set -e

create_symlink() {
	orig="$(realpath "$1")"
	link="$2"
	mkdir -pv "$(dirname "$link")"
	if [ -e "$link" ]; then
		if [ -h "$link" ]; then
			echo "[*] overwriting link"
			ln -sfv "$orig" "$link"
		else
			echo "[*] file \"$link\" exists"
		fi
	else
		echo "[*] creating link"
		ln -sv "$orig" "$link"
	fi
}

(
	cd "$(realpath "$(dirname "$0")")"
	create_symlink "neovim/init.lua" "$HOME/.config/nvim/init.lua"
	create_symlink "shell/config"    "$HOME/.zshrc"
	create_symlink "tmux/.tmux.conf" "$HOME/.tmux.conf"
	create_symlink "vim/.vimrc"      "$HOME/.vimrc"
)
